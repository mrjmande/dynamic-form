<div class="col-xs-12 top-nav"><%= link_to "Home", root_url %></div>

<h1>Edit Item</h1>
<div class="row">
  <div class="col-xs-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      <div class="col-xs-12 no-padding">
        <span class="col-xs-1"><%= f.check_box :participants %></span>
        <span class="col-xs-4 participant-check-box"><%= f.label :participants %></span>
      </div>
      
      <%= f.label :max_no_of_participants %>
      <%= f.number_field :max_no_of_participants %>
    
      <%= f.submit "Edit Item", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
